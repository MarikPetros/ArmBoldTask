<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/elipse_primary"
        android:layout_width="66dp"
        android:layout_height="63dp"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="29.5dp"
        android:layout_marginTop="20.92dp"
        android:foregroundGravity="top|right"
        android:src="@drawable/shopping_cart__4_"
        android:layout_width="25.12dp"
        android:layout_height="22.08dp"
        android:contentDescription="@string/shopping_cart_in_details" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginStart="17dp"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:fontFamily="@font/circe_regular"
        android:layout_width="8dp"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>